		             <Insets bottom="35.0" />
		          </StackPane.margin>
		       	</Button>
		       	
	            <ComboBox fx:id="difficultySelector" maxWidth="145" prefHeight="35" prefWidth="145" styleClass="my-combo-box" stylesheets="@application.css">
	              <StackPane.margin>
