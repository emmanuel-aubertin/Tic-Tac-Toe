	   			<Button fx:id="btnPvP" alignment="CENTER" contentDisplay="CENTER" maxWidth="150" mnemonicParsing="false" onAction="#handleLaunchP2P" prefHeight="35" prefWidth="111.0" stylesheets="@application.css" text="Play P2P" textAlignment="CENTER">
